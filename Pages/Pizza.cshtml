        <input type="text" asp-for="NewPizza.Name" class="form-control mr-5">
        <label asp-for="NewPizza.Size" class="control-label">Size</label>
        <select asp-for=NewPizaa.Size" asp-items="Html.GetEnumSelectList<PizzaSize>()" class=" form-control mr-5"></select>
        <label asp-for="NewPizza.Price" class="control-label"></label>
        <input asp-for="NewPizza.Price" class="form-control mr-5">
